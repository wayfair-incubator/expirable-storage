{
  "name": "expirable-storage",
  "version": "1.0.0",
  "description": "Expirable data storage based on localStorage and sessionStorage.",
  "homepage": "https://github.com/wayfair-incubator/expirable-storage",
  "repository": "github:wayfair-incubator/expirable-storage",
  "license": "MIT",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./index.d.ts",
  "bugs": {
    "url": "https://github.com/wayfair-incubator/expirable-storage/issues"
  },
  "scripts": {
    "build": "webpack",
    "lint": "eslint --ext .ts ./src",
    "test": "jest --coverage"
  },
  "keywords": [
    "expirable-storage",
    "expirable",
    "localstorage",
    "sessionstorage"
  ],
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "9.4.1",
    "typescript": "4.6.3",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-empty": "warn"
    }
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    }
  }
}
